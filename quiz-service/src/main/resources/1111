server:
  port: 8282

spring:
  application:
    name: quiz-service

  data:
    mongodb:
      uri: mongodb://localhost:27017/quizdb

  profiles:
    active: dev

  config:
    import: "configserver:http://localhost:9094"

  cloud:
    function:
      definition:
      web:
        path: "/functions"

    stream:
      defaultBinder: kafkaBinder
      binders:
        kafkaBinder:
          type: kafka
      kafka:
        binder:
          brokers: localhost:9092

      bindings:
        quizCreatedBinding-out-0:
          destination: quiz-created
          contentType: application/json

        acknowledgement-in-0:
          destination: acknowledge-quiz
          group: ${spring.application.name}
          contentType: application/json

eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    serviceUrl:
      defaultZone: http://localhost:8761/eureka/

resilience4j:
  circuitbreaker:
    configs:
      default:
        slidingWindowSize: 10
        permittedNumberOfCallsInHalfOpenState: 4
        failureRateThreshold: 50.0
        waitDurationInOpenState: 10s
